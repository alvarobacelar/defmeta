<%%= simple_form_for(<%= singular_table_name %>, multipart: true) do |f| %>
<div class="panel panel-default">
  <div class="panel-body">
    <%% if <%= singular_table_name %>.errors.any? %>
    <div id="error_explanation">
      <h2><%%= pluralize(<%= singular_table_name %>.errors.count, "erro") %></h2>

      <ul>
        <%% <%= singular_table_name %>.errors.full_messages.each do |message| %>
        <li><%%= message %></li>
        <%% end %>
      </ul>
    </div>
    <%% end %>
    <div class="row">
      <%- attributes.each do |attribute| -%>
      <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
      <%- end -%>
    </div>
  </div>

  <div class="panel-footer">
    <%%= f.submit "Salvar", class: 'btn btn-primary' %> ou
    <%%= link_to "Cancelar", :back, class: 'btn btn-default' %>
    <%%= link_to "Apagar", @<%= singular_table_name %>,
    method: :delete,
    class: 'btn btn-danger pull-right',
    data: { confirm: 'Tem certeza que quer apagar?' } if @<%= singular_table_name %>.persisted? %>
  </div>
</div>
<%% end %>
