<div class="page-header">
  <h1><%= plural_table_name.humanize %></h1>
  <%%= link_to "Novo <%= singular_table_name.humanize %>", new_<%= singular_table_name %>_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Data cadastro</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <td><%%= link_to <%= singular_table_name %>.descricao, <%= singular_table_name %> %></td>
          <td><%%= l <%= singular_table_name %>.created_at, format: :xshort %></td>
          <td><%%= link_to 'Editar', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>
