<div class="page-header">
  <h1>Historico de Resultados</h1>  
</div>

<div class="panel panel-default">
  <div class="panel-heading">
  Valor agregado
  </div>
  <%= column_chart Bonificacao.group_by_month(:periodo, format: "%B/%Y").maximum(:totalbnf),  download: true %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Mes competencia</th>
        <th>Bonificação alcançada</th>
        <th>Data do fechamento</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @bonificacoes.each do |bonificacao| %>
        <tr>
          <td><%= l bonificacao.periodo, format: '%B'  %></td>
          <td><%= bonificacao.totalbnf * 10 %>%</td>
          <td><%= l bonificacao.created_at, format: :long %></td>
          <td><%= link_to 'Ver', bonificacao_path(bonificacao), class: 'btn btn-info btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
  Qualidade
  </div>
  <%= column_chart Slame.group_by_month(:periodo, format: "%B/%Y").maximum(:sla),  download: true %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Mes competencia</th>
        <th>SLA registrado</th>
        <th>Data do fechamento</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @slames.each do |slame| %>
        <tr>
          <td><%= l slame.periodo, format: '%B'  %></td>
          <td><%= slame.sla %>%</td>
          <td><%= l slame.created_at, format: :long %></td>
          <td><%= link_to 'Ver', slame_path(slame), class: 'btn btn-info btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>