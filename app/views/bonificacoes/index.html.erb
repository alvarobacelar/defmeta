<div class="page-header">
  <h1>Bonificacoes</h1>  
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Mes competencia</th>
        <th>Bonificação alcançada</th>
        <th>Data do fechamento</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @bonificacoes.each do |bonificacao| %>
        <tr>
          <td><%= l bonificacao.periodo, format: '%B'  %></td>
          <td><%= bonificacao.totalbnf * 10 %>%</td>
          <td><%= l bonificacao.created_at, format: :long %></td>
          <td><%= link_to 'Ver', bonificacao_path(bonificacao), class: 'btn btn-info btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
