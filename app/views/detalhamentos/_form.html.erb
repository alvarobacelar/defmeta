<%= simple_form_for(detalhamento, multipart: true) do |f| %>
<div class="panel panel-default">
  <div class="panel-body">
    <% if detalhamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(detalhamento.errors.count, "erro") %></h2>

      <ul>
        <% detalhamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="row">
      <%= f.input :item %>
      <%= f.input :meta_id %>
      <%= f.input :status %>
    </div>
  </div>

  <div class="panel-footer">
    <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
    <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
    <%= link_to "Apagar", @detalhamento,
    method: :delete,
    class: 'btn btn-danger pull-right',
    data: { confirm: 'Tem certeza que quer apagar?' } if @detalhamento.persisted? %>
  </div>
</div>
<% end %>
