<%= simple_form_for(sistemasla, multipart: true) do |f| %>
<div class="panel panel-default">
  <div class="panel-body">
    <% if sistemasla.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sistemasla.errors.count, "erro") %></h2>

      <ul>
        <% sistemasla.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="row">
      <%= f.input :nome,  wrapper_html: {class: 'col-md-6'} %>
      <%= f.input :slaaceitavel,  wrapper_html: {class: 'col-md-3'} %>
      <%= f.association :gruposla, collection: Gruposla.all.order('nome'), label_method: :nome, wrapper_html: {class: 'col-md-3'} %>
      <%= f.input :descricao,  wrapper_html: {class: 'col-md-12'} %>
      
    </div>
  </div>

  <div class="panel-footer">
    <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
    <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
    <%= link_to "Apagar", @sistemasla,
    method: :delete,
    class: 'btn btn-danger pull-right',
    data: { confirm: 'Tem certeza que quer apagar?' } if @sistemasla.persisted? %>
  </div>
</div>
<% end %>
